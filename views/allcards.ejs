<!DOCTYPE html>
<html lang="en">
<head> 
  <%- include('partials/meta.ejs') %> 
  <title>Home</title>
  <style>
      td img{
          max-width: 60px;
      }
      table{
          width: 100%;
      }
      th{
          text-align: left;
      }
      main{
          width: 1000px;
          background-color: rgba(0, 0, 0, 0.513);
          font-family: Arial, Helvetica, sans-serif;
      }
      a{
          color: white;
      }
  </style>
</head>
<body>
  <%- include('partials/nav.ejs') %>
  <main>
        <table>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Description</th>
                <th>Image</th>
                <th>Delete</th>
                <th>Edit</th>
            </tr>
            <%
                for(var card of cards){
                    %>
                        <tr>
                            <td><a href="/print/<%= card._id %>"><%= card._id %></a></td>
                            <td><%= card.scaryName %></td>
                            <td><%= card.scaryEmail %></td>
                            <td><%- card.scaryDescription %></td>
                            <td><img src="uploads/<%= card.scaryImageName %>" alt=""></td>
                            <td><a href="/delete/<%= card._id %>">DELETE</a></td>
                            <td><a href="/edit/<%= card._id %>">EDIT</a></td>
                        </tr>
                    <%
                }
            %>

            
        </table>
  </main>
  
  <%- include('partials/footer.ejs') %> 

</body>
</html>